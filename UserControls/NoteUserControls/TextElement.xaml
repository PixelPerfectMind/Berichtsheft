<UserControl x:Class="Berichtsheft.UserControls.NoteUserControls.TextElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Berichtsheft.UserControls.NoteUserControls"
             mc:Ignorable="d" >
    <StackPanel Orientation="Horizontal" Background="#02000000" Margin="3" Width="300" MouseEnter="StackPanel_MouseEnter" MouseLeave="StackPanel_MouseLeave">
        <TextBlock x:Name="txt" Foreground="Black" FontFamily="{StaticResource EncodeSans}" Text="Leerer Text" VerticalAlignment="Center" />
        <Button x:Name="btn_edit" Content="Bearbeiten" VerticalAlignment="Center" Height="18" Width="65" Margin="5,0,0,0" Visibility="Collapsed" />
    </StackPanel>
</UserControl>
