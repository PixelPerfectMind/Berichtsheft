<UserControl x:Class="Berichtsheft.UserControls.SearchItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Berichtsheft.UserControls"
             mc:Ignorable="d" Foreground="White" FontFamily="{StaticResource EncodeSans}" FontSize="16" >
    <Grid x:Name="grd_resultDisplay" MouseDown="grd_resultDisplay_MouseDown">
        <Image x:Name="img_thumbnail" Source="/Resources/Icons/title.png" Width="24" Height="24" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" />
        <StackPanel Orientation="Vertical" Margin="40,5,0,0">
            <TextBlock x:Name="txt_name" Text="Item header" FontWeight="Bold" FontStretch="Condensed" />
            <TextBlock x:Name="txt_type" Text="Item type" FontSize="12" />
        </StackPanel>
    </Grid>
</UserControl>
