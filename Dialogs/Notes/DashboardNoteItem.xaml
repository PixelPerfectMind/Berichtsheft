<UserControl x:Class="Berichtsheft.Dialogs.Notes.DashboardNoteItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Berichtsheft.Dialogs.Notes"
             mc:Ignorable="d"  FontFamily="{StaticResource EncodeSans}" FontSize="18">
    <StackPanel x:Name="sp" Cursor="Hand" Orientation="Horizontal" Margin="0,5,0,5" Background="#02000000" MouseDown="sp_MouseDown">
        <Ellipse x:Name="ell" Width="20" Height="20" Fill="Green" Margin="0,0,10,0" Stroke="DarkGreen" StrokeThickness="3"/>
        <TextBlock x:Name="txt" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </StackPanel>
</UserControl>
