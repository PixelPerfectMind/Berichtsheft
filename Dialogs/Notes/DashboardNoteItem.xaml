<UserControl x:Class="Berichtsheft.Dialogs.Notes.DashboardNoteItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Berichtsheft.Dialogs.Notes"
             mc:Ignorable="d"  FontFamily="{StaticResource EncodeSans}" FontSize="18">
    <Button x:Name="btn_item" Width="100" Height="80" Click="btn_item_Click" Background="#7F00A3AE">
        <StackPanel Orientation="Vertical" MaxWidth="80">
            <Ellipse x:Name="ell" Width="20" Height="20" Fill="Green" Margin="0,0,0,5" Stroke="DarkGreen" StrokeThickness="3"/>
            <TextBlock x:Name="txt" Text="Placeholder" TextWrapping="Wrap" FontSize="14" FontFamily="{StaticResource EncodeSans}" />
        </StackPanel>
    </Button>
</UserControl>
