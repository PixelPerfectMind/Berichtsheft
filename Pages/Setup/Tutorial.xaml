<Page x:Class="Berichtsheft.Pages.Setup.Tutorial"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Berichtsheft.Pages.Setup"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Fertig" FontFamily="{StaticResource EncodeSans}" FontSize="16">
    <Border>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Ellipse Width="130" Height="130" Stroke="#FF8F8F8F" StrokeThickness="2" >
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/Resources/Images/lookHere.png"/>
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock Text="Schau' mal unten rechts!" Foreground="White" Margin="0,10,0,0" TextAlignment="Center" FontWeight="Bold" FontStretch="Condensed" FontSize="24" />
            <TextBlock Text="Dein Programm ist nun einsatzbereit." Foreground="White" Margin="0,10,0,0" TextAlignment="Center" />
            <TextBlock Text="Um es zu starten, klicke auf die unscheinbare Schaltfläche unten rechts und dann unter Programmoptionen einblende." TextAlignment="Center" Foreground="White" TextWrapping="Wrap" Width="447" />
        </StackPanel>
    </Border>
</Page>
